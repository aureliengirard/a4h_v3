
<section class="collection__un-goals">
    <div class="row">
        <div class="col-lg-12 col-tb">
            <div class="title-has-cta">
                <h2>{{- title -}}</h2>
                {%- include 'partial-cta'  with { cta_label: "Learn<span> More</span>", cta_url: "/pages/un-goals/" }  -%}
            </div>

            {%- capture un_collections -%}
            {%- for collection in collections -%}

                {%- assign template_type = collection.template_suffix | strip -%}
                {%- assign ungoals = "" -%}

                {%- if template_type == 'ungoals' -%}
                    |{{ collection.title | replace: ".", "::" }}::{% assign img = collection.metafields.accentuate.desktop_alt_logo | first %}{{- img.cloudinary_src | append: 'w_195' -}}::{{ collection.url }}
                {%- else -%}
                    {%- continue -%}
                {%- endif -%}

            {%- endfor -%}
            {%- endcapture -%}

            <div class="impact-logos">

            {%- assign sortedposts = un_collections | split: '|' | sort -%}
            {%- for post in sortedposts -%}
                {%- assign postitems = post | split: '::' -%}
                {%- assign un_id = postitems[0] | strip | plus: 0 -%}
                {%- if un_id < 10 and un_id > 0 -%}
                <a {% if filters_artists == true -%}href="/pages/all-artists/"{% else %}href="{{- postitems[3] -}}"{%- endif -%} class="ungoal__item" {% if filters_artists == true -%}ungoal="{{postitems[1] | handleize }}"{%- endif -%}>
                    <img src="{{- postitems[2] -}}" alt="{{postitems[1]}}" title="{{postitems[1]}}">
                </a>
                {%- else -%} {%- continue -%} {%- endif -%}

            {%- endfor -%}
            {% assign sortedposts = un_collections | split: '|' | sort %}
            {% for post in sortedposts %}
                {% assign postitems = post | split: '::' %}
                {% assign un_id = postitems[0] | strip | plus: 0 %}
                {%- if un_id > 9 -%}
                <a {% if filters_artists == true -%}href="/pages/all-artists/"{% else %}href="{{- postitems[3] -}}"{%- endif -%} class="ungoal__item" {% if filters_artists == true -%}ungoal="{{postitems[1] | handleize }}"{%- endif -%}>

                    <img src="{{postitems[2]}}" alt="{{postitems[1]}}" title="{{postitems[1]}}">
                </a>
                {%- else -%} {%- continue -%} {% endif %}

            {% endfor %}

            <a href="/pages/un-goals">
                <img class="all-impact-logo" src="{{ 'all-sdgs.png' | asset_url }}" alt="UN Goals">
            </a>
            </div>

        </div>
    </div>

    <script type="text/javascript">
        $( ".ungoal__item" ).each(function(index) {
            $(this).on("click", function(){
                var ungoal_val = $(this).attr('ungoal');
                var value_ungoal = sessionStorage.getItem("value_ungoal");
                ungoal_filter = ungoal_val;
                window.sessionStorage.setItem('value_ungoal', ungoal_filter);
            });
        });
    </script>
</section>
