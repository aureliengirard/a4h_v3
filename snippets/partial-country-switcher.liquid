<div class="dropdown country__switcher">
    <div onclick="myFunction()" class="dropbtn">
        <div class="country__active"></div>
    </div>
    <div id="Country-List" class="country__list">
        <a class="ca" href="https://ca-en.artforhumans.org/">{% include 'flag-canada' %}</a>
        {% comment %}
        <a class="eu" href="https://mx.artforhumans.org/">{% include 'flag-mexico' %}</a>
        <a class="eu" href="https://eu-en.artforhumans.org/">{% include 'flag-european-union' %}</a>
        {% endcomment %}
    </div>
</div>

<script type="text/javascript">
function myFunction() {
    document.getElementById("Country-List").classList.toggle("show");
}

window.onclick = function(event) {
    if (!event.target.matches('.country__active')) {
        var dropdowns = document.getElementsByClassName("country__list");
        var i;
        for (i = 0; i < dropdowns.length; i++) {
            var openDropdown = dropdowns[i];
            if (openDropdown.classList.contains('show')) {
                openDropdown.classList.remove('show');
            }
        }
    }
}
</script>
