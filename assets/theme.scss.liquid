// FILTER BAR BY PRODUCT TYPES
.filter-by{

    .filter-by-type__wrapper{
    }


    &.filter-by-type{
        transition: opacity .15s ease-in-out;
        &:not(.active){
            height: 0;
            overflow: hidden;
            opacity: 0;
        }

        &.active{
            padding: 0 0 $gutter;
            height: 100%;
            opacity: 1;
        }
    }

    .filter{
        @include flexbox;
        @include flex-flow(row wrap);
        @include align-items(center);
        cursor: pointer;

        .filter__icon{
            border: 2px $dark-gray solid;
            margin-right: $spacing-xxl / 5;
            height: $spacing-xxl / 2;
            width: $spacing-xxl / 2;
        }

        .filter__all{
            width: 100%;
            line-height: 1;
            padding: $gutter / 3;
            height: auto;
            border: 2px $dark-gray solid;
            color: $black;

            div{
                margin-left: 5px;
            }

            *{
                display: inline-block;
            }
        }

        .filter__label{
            color: $dark-gray;
            line-height: 1em;

            @include respond-below($xl){
                font-size: .875em;
            }
        }

        &.active,
        &:hover{
            .filter__all,
            .filter__icon{
                background-color: $yellow;
                border-color: $yellow;
            }

            .filter__all,
            .filter__label{
                color: $black;
            }
        }

