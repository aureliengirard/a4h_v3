//
//  MEDIA QUERIES
//––––––––––––––––––––––––––––––––––––––––––––––––––
// A map of breakpoints.

$xxs: 0px;
$xs: 400px;
$sm: 576px;
$md: 768px;
$lg: 992px;
$xl: 1200px;
$xxl: 1440px;
$xxxl: 1920px;

//  RESPOND ABOVE
//––––––––––––––––––––––––––––––––––––––––––––––––––

// @include respond-above($$sm) {}
@mixin respond-above($breakpoint-value) {

    // Write the media query.
    @media (min-width: $breakpoint-value) {
      @content;
    }

}

//  RESPOND BELOW
//––––––––––––––––––––––––––––––––––––––––––––––––––

// @include respond-below($$sm) {}
@mixin respond-below($breakpoint-value) {

    // Write the media query.
    @media (max-width: ($breakpoint-value - 1)) {
      @content;
    }

}

//  RESPOND BETWEEN
//––––––––––––––––––––––––––––––––––––––––––––––––––

// @include respond-between($sm, $md) {}
@mixin respond-between($lower, $upper) {

    // Write the media query.
    @media (min-width: $lower) and (max-width: ($upper - 1)) {
      @content;
    }
}


// FLEX MIXINS

@mixin flexbox {
  display: -webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
}

@mixin inline-flex {
  display: -ms-inline-flex;
  display: -webkit-inline-flex;
  display: inline-flex;
}

// Flex-flow
@mixin flex-flow($values){
    -webkit-flex-flow: $values; /* Safari 6.1+ */
    flex-flow: $values;
}

// align-items
@mixin align-items($values){
    -webkit-align-items: $values;
    align-items: $values;
    -webkit-align-content: $values;
    align-content: $values;
}

// align-content
@mixin align-content($values){
    -webkit-align-content: $values;
    align-content: $values;
}

// align-content
@mixin justify-content($values){
    -webkit-justify-content: $values;
    justify-content: $values;
	-ms-justify-content: $values;
}

// Flexwrap
@mixin flex-wrap($values) {
  -webkit-flex-wrap: $values;
  -moz-flex-wrap:  $values;
  flex-wrap:  $values;
}

@mixin flex-direction($direction) {
  -webkit-flex-direction: $direction;
     -moz-flex-direction: $direction;
      -ms-flex-direction: $direction;
          flex-direction: $direction;
}

@mixin animation($values){
    animation: $values;
    -webkit-animation: $values;
    -moz-animation: $values;
    -o-animation: $values;
    -ms-animation: $values;
}

@mixin column($values){
    -webkit-column-count: $values;
    -moz-column-count: $values;
    column-count: $values;
}

@mixin placeholders ($color, $font-family, $text-transform, $font-weight, $font-size) {
	&::-webkit-input-placeholder { /* Chrome */
        color: $color !important;
        font-weight: $font-weight !important;
		font-size: $font-size !important;
		font-family: $font-family !important;
		text-transform: $text-transform !important;
	}
	&:-ms-input-placeholder { /* IE 10+ */
		color: $color !important;
        font-weight: $font-weight !important;
        font-size: $font-size !important;
		font-family: $font-family !important;
		text-transform: $text-transform !important;
	}
	&::-moz-placeholder { /* Firefox 19+ */
		color: $color !important;
        font-weight: $font-weight !important;
        font-size: $font-size !important;
		font-family: $font-family !important;
		text-transform: $text-transform !important;
		opacity:1;
	}
	&:-moz-placeholder { /* Firefox 4 - 18 */
		color: $color !important;
        font-weight: $font-weight !important;
        font-size: $font-size !important;
		font-family: $font-family !important;
		text-transform: $text-transform !important;
		opacity:1;
	}
}

// keyframes

@keyframes fadeIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes fadeUp {
    0% {
        opacity: 0;
        transform: translateY(50px);
    }

    100% {
        opacity: 1;
        transform: translateY(0px);
    }
}

@keyframes invisiblyGrowFontSize {
    0% {
        font-size: 0;
        opacity: 0;
    }
    100% {
        font-size: 1em;
        opacity: 0;
    }
}

.fadeIn {
    -webkit-animation-name: fadeIn;
    animation-name: fadeIn;
}

