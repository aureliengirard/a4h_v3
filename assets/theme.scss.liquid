/* SETTINGS & VARIABLES
========================================================================== */
// Spacings & Gutter
$gutter: 30px;
$spacing: 10px;
$spacing-xxl: 50px;
$base: 18;


// SVG
$svg-select-icon: #{'{{ "ico-select.svg" | asset_url }}'};

// Colors
$yellow: #FFCC00;
$gray: #efefef;
$dark-gray: #8c8c8c;
$white: #FFFFFF;
$black: #272727;
$black-0: #000000;

$dark-teal: #27B288;
$orange: #FFB128;
$teal: #E2F2EF;
$cyan: #0091ad;

$color-body-text: $black;
$color-body: $white;
$color-border: #f6f6f6;
$color-border-alt: #999999;


/*================ COMMON ================*/

/* Document
========================================================================== */
html {
    line-height: 1.3;
    -ms-text-size-adjust: 100%;
    -webkit-text-size-adjust: 100%;
}

/* Sections
========================================================================== */
body {
    margin: 0;
}

article,
aside,
footer,
header,
nav,
section {
    display: block;
}

* {
    transition: all .25s ease;
}

/* Fonts & Typography
========================================================================== */

// Fonts Import
@import url('https://fonts.googleapis.com/css?family=Raleway:200,300,400,500,600,700,800&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,400;0,700;1,200;1,300;1,400;1,700&display=swap');

$nunito: 'Nunito', sans-serif;
$relaway: 'Raleway', sans-serif;

body {
    font-family: $nunito;
    font-size: $base+px;
    line-height: 1.35;
    color: $black;
    font-weight: 300;
    background: $white;
}

h1,
h2,
h3,
h4,
h5,
h6 {
    font-family: $relaway;
    text-transform: initial;
    color: $black;
    text-transform: uppercase;
}

h1 {
    font-size: 3.125em;
    margin: 0 0 $gutter*(2/3);
    text-transform: uppercase;
    line-height: 1.15;
    font-weight: 700;

    @include respond-below($xxxl) {
        font-size: 2em;
    }

    @include respond-below($md) {
        font-size: 1.5em;
    }

    &.collection_title{
        font-size: (77 / 18)+em;
        line-height: 1;
        font-weight: 400;
        font-family: $nunito;
    }
}

h2 {
    font-size: (36 / $base)+em;
    font-weight: 700;
    margin: 0 0 $gutter 0;
    line-height: (77 / 36);

    @include respond-below($xxxl){
        font-size: 1.75em;
    }

    @include respond-below($md){
        font-size: 1.125em;
    }

    &.center{
        text-align: center;
    }
}

h3 {
    font-size: 1.375em;
    margin: 0 0 $gutter 0;

    @include respond-below($md){
        font-weight: 700;
        font-size: 1em;
    }
}

h4 {
    font-size: 1.25em;
    font-weight: 400;

    @include respond-below($md){
        font-size: 1em;
    }
}

p {
        font-size: 1em;
        margin: 1em 0;

        @include respond-above($xxxl){
            font-size: 1.125em;
        }

        &:nth-child(1){
            margin-top: 0;
        }

        &:nth-last-child(1){
            margin-bottom: 0;
        }
}

/* Reusable texts and headings Styling classes
========================================================================== */

.text--center,
.text--center *{
    text-align: center;
}

.text--right,
.text--right *{
    text-align: right;
}

.headings__section{
    h1, h2, h3{
        margin-bottom: $gutter;

        & + *{
            margin-top: 0;
        }
    }

    p:nth-last-child(1){
        margin-bottom: $gutter / 2;
    }

    @include respond-below($md){

        & + [class*="col-"]{
             margin-top: 0 !important;
        }
    }
}

.heading__section{

    @include respond-below($md){

        & + [class*="col-"]{
             margin-top: 0 !important;
        }
    }
}

