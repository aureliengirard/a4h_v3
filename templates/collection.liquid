{%- assign ngos = settings.ngo_list_for_search | split: ',' -%}
{%- assign prices = settings.price_list_for_search | split: ',' -%}

<section class="collection">

    <div class="row collection__wrapper">
        {% include 'partial-collection-sidebar', title: "Home of Impact Art" %}
   		{% paginate collection.products by 100 %}
          <div class="collection-items__wrapper col-lg-8 ml-auto">
              <div class="col-lg-12 collection__options">
                  {% include 'partial-collection-options' %}
              </div>
              <div class="col-12 collection-items" data-masonry="{ "itemSelector": ".product-item", "columnWidth": 200 }">
                  {% for product in collection.products %}
                    {% include 'partial-product-card' with filter: true %}
                  {% endfor %}
              </div>
          {% if paginate.pages > 1 %}
           <div class="pagination-container">{{ paginate | default_pagination: next: '>>', previous: '<<' }}</div>
          {% endif %}
      		</div>
        {% endpaginate %}
        </div>

</section>
