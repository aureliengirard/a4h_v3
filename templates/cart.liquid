<section class="cart">
    <div class="row">
        <div class="col-12">
            <h2>{{ 'cart.general.title' | t }}</h2>
            {% if cart.item_count > 0 %}

                <form action="/cart" method="post" class="cart-items" novalidate onsubmit="if(document.getElementById('agree').checked) { return true; } else { alert('Please indicate that you have read and agree to the Terms and Conditions and Privacy Policy'); return false; }">
                    <div class="product-list">
                        <div class="list-header">
                            <h3>Art Piece</h3>
                            <h3 class="text--center">Charity</h3>
                            <h3 class="text--center">Quantity</h3>
                            <h3 class="text--right">Total</h3>
                        </div>
                        {% for item in cart.items %}
                        {% if item.product.type  == 'mw_hidden_cart_fee' %}{% continue %}{% endif %}

                        {% if item.product.type != 'Product Fee' %} <span class="mw-product-fees" data-id="{{ item.id }}"></span> {% endif %}

                        <div class="cart-item">
                            <div class="image">
                                <a href="{{ item.url }}">{{item | img_url: '240x240' | img_tag: item.title}}</a>
                            </div>
                            <div class="details">
                                <div class="name-vendor-container">
                                    <span class="product-name">{{ item.product.title }}</span>
                                    <span class="product-vendor">{{ item.vendor }}</span>
                                    <span class="product-vendor">test : {{ attributes.your-pet-name }}</span>
                                </div>
                                <a class="remove" href="/cart/change?line={{ forloop.index }}&quantity=0">Remove</a>
                            </div>
                            <div class="variant-container">
                                <span>{{ item.variant.title }}</span>
                                <span> - </span>
                                <span>{% if item.product.metafields.c_f.donation == 'split' %}[Split]{% else %}[Full]{% endif %}</span>
                            </div>
                            <div class="quantity-container">
                                <b>1</b>
                                <input type="hidden"
                                name="updates[]"
                                id="updates_{{ item.id }}"
                                value="1"
                                min="0" max="1"
                                aria-label="{{ 'cart.general.item_quantity' | t }}"/>
                            </div>
                            <div class="total-price">
                                <span>{{ item.line_price | money }}</span>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    <div class="subtotal-container commission-container charity">
                        ART LOVER SERVICE FEE INCLUDED IN NEXT STEP<br><br>
                        <div class="tooltip">
                            <img height="30px" src="{{ 'question_black.png' | asset_img_url: 'master' }}"/>
                            <span class="tooltiptext">This fee is required to cover the operational costs involved without which Art For Humans could not exist. All our efforts are solely dedicated to achieving our social goal. </span>
                        </div>

                        <!-- test ramzi --> <span class="mw-hidden-fees" style="display:none"></span> <!-- HIDDEN BECAUSE OF AMOUNT FORMAT BUG -->
                        <!-- test ramzi à retirer : <span class="subtotal-label">PROCEEDS TO CHARITY</span>
                        <span class="subtotal-value">{{ cart.total_price | times: 0.8 | money }}</span> -->
                    </div>

                    <div class="subtotal-container">
                        <span class="subtotal-label">{{ 'cart.general.subtotal' | t }}</span>
                        <span class="subtotal-value" id="subtotalBlock">{{ cart.total_price | money }}</span>
                    </div>
                    <div class="text--right" style="margin-top : -35px; margin-bottom : 30px;">
                        <small>* Tax & shipping amount will be calculated at the next step before payment</small>
                    </div>

                    {% comment %}
                    <div class="subtotal-container commission-container afh">
                        <span class="subtotal-label">A4H Commission (20%)</span>
                        <span class="subtotal-value">{{ cart.total_price | times: 0.2 | money }}</span>
                    </div>
                    {% endcomment %}

                    <div class="checkout-container agree">
                        <input class="checkbox-agree" type="checkbox" id="agree" name="agree" value="1">
                        <label for="agree">I have read and agree to the <a href="https://artforhumans.org/21924275/policies/1761443878.html">Terms and Conditions</a> and <a href="https://artforhumans.org/21924275/policies/1761411110.html">Privacy Policy</a>. </label>
                    </div>
                    <div class="checkout-container">
                        <input class="generic-btn" type="submit" name="checkout" class="btn" value="{{ 'cart.general.checkout' | t }}">
                    </div>
                    <div class="text--center" style="display:none !important">
                        <b>Our checkout is temporary unavailable.  Thanks for your patience while we put the pieces back together.</b><br><br>
                        In the meantime, please <a href="mailto:contact@artforhumans.org">contact us</a> if you would like us to hold a piece for you!</div>
                    </form>

                {% else %}

                    <div class="empty">
                        {% include 'empty cart' %}
                        <h3>Your cart is empty</h3>
                        <a href="/collections/all" class="secondary-btn">Keep Exploring</a>
                    </div>

                {% endif %}
            </div>
        </div>

    </section>
