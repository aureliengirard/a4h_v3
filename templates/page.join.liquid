<script>
$(document).ready( function () {

    $(".open-form").click(function() {
        var form = $(this).attr('form');
        $('[class*="formu-"').hide();
        if ($('.formu-'+form+':first').is(":visible")) {
            $('.formu-'+form).hide();
        } else {
            $('.formu-'+form).show();
            $('html, body').animate({
                scrollTop: $('.formu-'+form).offset().top
            }, 1000);
        }
    });
    $('[class*="formu-"').hide();

});
</script>
