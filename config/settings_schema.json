    "name": "Settings",
    "settings": [
      {
        "type": "image_picker",
        "id": "header_logo",
        "label": "Header Logo"
      },
      {
        "type": "range",
        "id": "header_logo_max_width",
        "min": 150,
        "max": 250,
        "step": 5,
        "unit": "px",
        "label": "Custom logo width",
        "default": 250
      },
      {
        "type": "checkbox",
        "id": "is_ngo_list_select",
        "default": false,
        "label": "NGO list as autocomplete. If false, will be a dropdown."
      },
      {
        "type": "text",
        "id": "ngo_list_for_search",
        "label": "Comma separated list of NGOs"
      },
      {
        "type": "text",
        "id": "price_list_for_search",
        "label": "Comma separated list of Price Ranges. eg: 10-50, 50-100"
      }
    ]
